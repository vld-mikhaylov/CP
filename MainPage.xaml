<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Lab_1.ViewModels"
             x:Class="Lab_1.MainPage"
             Title="Notes">

    <ContentPage.BindingContext>
        <local:NoteViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Buttons for adding and deleting notes -->
        <StackLayout Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalOptions="End">
            <Button Text="+" Command="{Binding AddNoteCommand}" />
            <Button Text="-" Command="{Binding DeleteNoteCommand}" />
        </StackLayout>

        <!-- Note title and content -->
        <StackLayout Grid.Row="1" Grid.Column="0" Spacing="10">
            <Entry Text="{Binding SelectedNote.Title, Mode=TwoWay}" Placeholder="Title" />
            <Editor Text="{Binding SelectedNote.Content, Mode=TwoWay}" Placeholder="Content" VerticalOptions="FillAndExpand" />
        </StackLayout>
    </Grid>
</ContentPage>
