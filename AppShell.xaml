<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Lab_1"
       xmlns:viewmodels="clr-namespace:Lab_1.ViewModels"
       x:Class="Lab_1.AppShell">

    <Shell.BindingContext>
        <viewmodels:NoteViewModel />
    </Shell.BindingContext>

    <FlyoutItem Title="Create Note">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="All Notes">
        <ShellContent>
            <ContentPage>
                <CollectionView ItemsSource="{Binding Notes}" SelectionMode="Single" SelectionChanged="OnNoteSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Title}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ContentPage>
        </ShellContent>
    </FlyoutItem>
</Shell>
